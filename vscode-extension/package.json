{
    "name": "daq-ide",
    "displayName": "DAQ IDE",
    "description": "Data Acquisition IDE for component-based DAQ systems",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:daq",
        "workspaceContains:**/*.daq"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "daq.newProject",
                "title": "DAQ: New Project"
            },
            {
                "command": "daq.compile",
                "title": "DAQ: Compile Project"
            },
            {
                "command": "daq.run",
                "title": "DAQ: Run Project"
            },
            {
                "command": "daq.stop",
                "title": "DAQ: Stop"
            }
        ],
        "languages": [
            {
                "id": "daq",
                "extensions": [
                    ".daq"
                ],
                "aliases": [
                    "DAQ Project",
                    "daq"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "daq",
                "scopeName": "source.json",
                "path": "./syntaxes/daq.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2"
    }
}